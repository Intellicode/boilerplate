{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate code for a modern Javascript application",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "node src/server/app.js",
    "build": "webpack --config webpack.config.prod.js --progress -p",
    "docker:build": "docker build -t boilerplate .",
    "docker:run": "docker run -p 8080:80 boilerplate"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Intellicode/boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Intellicode/boilerplate/issues"
  },
  "homepage": "https://github.com/Intellicode/boilerplate#readme",
  "dependencies": {
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^5.0.4",
    "redux": "^3.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "babel-core": "^6.7.6",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "jest-cli": "^20.0.1",
    "postcss-cssnext": "^2.5.2",
    "postcss-loader": "^2.0.5",
    "precss": "^1.4.0",
    "react-addons-test-utils": "^15.0.1",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.2.0",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-loader": "^6.2.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  }
}
